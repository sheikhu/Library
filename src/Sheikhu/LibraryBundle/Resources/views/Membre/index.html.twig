{% extends '@SheikhuLibrary/layout.html.twig' %}

    {% block content -%}

    {% embed '@SheikhuLibrary/Embed/grid.html.twig' with { size: 6} %}

        {% block toolbar_top %}
            <div class="mws-panel-toolbar">
                <div class="btn-toolbar">
                    <div class="btn-group">
                        <a href="{{ path('membre_new') }}" class="btn">
                            <i class="icol-add"></i> Ajouter un membre
                        </a>
                    </div>
                </div>
            </div>
        {% endblock %}

    {% block title %}
    Liste des membres
    {% endblock %}

    {% block grid_content %}
    <table class="mws-table filterable-fn">
        <thead>
        <tr>

                <th>Code</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Date de naissance</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
        <tr>

                    <td>{{ entity.code }}</td>
                    <td>{{ entity.nom }}</td>
                    <td>{{ entity.prenom }}</td>
                    <td>{% if entity.dateNaissance %}{{ entity.dateNaissance|date('d m Y') }}{% endif %}</td>
                    <td>
<div class="btn-group">
        {{ macros.link_icon('show', 'membre_show', { 'id': entity.id }, 'search') }}
        {{ macros.link_icon('edit', 'membre_edit', { 'id': entity.id }, 'edit') }}
</div>
                    </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endblock %}

    {% endembed %}

    {% endblock %}
