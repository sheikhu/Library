{% extends '@SheikhuLibrary/layout.html.twig' %}

{% block content -%}
    <div class="mws-panel grid_4">
        <div class="mws-panel-header">
            <span>Categories</span>
        </div>
        <div class="mws-panel-toolbar">
            <div class="btn-toolbar">
                <div class="btn-group">
                    <a href="{{ path('categories_new') }}" class="btn"><i class="icol-add"></i> Ajouter</a>
                    </div>
                </div>
            </div>
        <div class="mws-panel-body no-padding">
            <table class="mws-table">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.nom }}</td>
                        <td>
                            <div class="btn-group">
                                <a class="btn btn-default" href="{{ path('categories_show', { 'id': entity.id }) }}" title="Voir">
                                    <i class="icon-search"></i>
                                </a>
                                <a class="btn btn-default" href="{{ path('categories_edit', { 'id': entity.id }) }}" title="Editer">
                                    <i class="icon-edit"></i>
                                </a>
                            </div>

                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    {% endblock %}
