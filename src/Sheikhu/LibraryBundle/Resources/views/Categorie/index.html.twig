{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Categorie list</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('categories_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nom }}</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-default" href="{{ path('categories_show', { 'id': entity.id }) }}">show</a>
                        <a class="btn btn-default" href="{{ path('categories_edit', { 'id': entity.id }) }}">edit</a>
                    </div>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('categories_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
